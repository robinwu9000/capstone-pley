<!DOCTYPE html>
<html>
<head>
  <title>Pley</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
  <!-- <link href="https://raw.githubusercontent.com/kartik-v/bootstrap-star-rating/master/css/star-rating.css" media="all" rel="stylesheet" type="text/css" /> -->
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <!-- <script src="https://raw.githubusercontent.com/kartik-v/bootstrap-star-rating/master/js/star-rating.js" type="text/javascript"></script> -->
</head>
<body>

  <%= render template: "layouts/_navigation_bar" %>

  <% if flash[:errors] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:errors].join("<br>").html_safe %>
    </div>
  <% end %>

  <div id="site-content">
    <%= yield %>
  </div>

</body>
</html>
