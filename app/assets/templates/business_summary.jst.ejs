<div class="summary-details" style="width: 325px; max-width: 50%; float: left;">
  <h2>
    <%= business.escape("name").replace(/\b./g, function(a){ return a.toUpperCase(); }) %>
    <input type="hidden" class="rating" value="<%= business.escape('avg_rating') %>" data-readonly>
  </h2>

  <p>
    <%= business.escape("address") %>
    <%= business.escape("city") + ", " + business.escape("state") + " " + business.escape("zip_code") %>
  </p>

  <p>
    <% for(var i = 0; i < business.get("price_range"); i++) { %>
      <span class="glyphicon glyphicon-usd"></span>
    <% } %>
  </p>

  <span><%= business.escape("num_reviews") %> Reviews</span>

  <span style="float: right;"><%= business.get("categories").join(", ") %></span>
</div>

<div class="summary-photos" style="width: 50%; height: 100%; float: right;">
  <div id="centering" style="display: inline-block; height: 100%; vertical-align: middle; width: 10%;"></div>

  <% if(photos.at(0)) { %>
    <img src= "<%= photos.at(0).escape("path") %>" class="summary-photo"/>
  <% } %>
  <% if(photos.at(1)) { %>
    <img src= "<%= photos.at(1).escape("path") %>" class="summary-photo"/>
  <% } %>
</div>

<script type="text/javascript">
  $(function() {
    $(".rating").rating();
  });
</script>

<style>
  .summary-photo {
    max-height: 95%;
    max-width: 40%;
    vertical-align: middle;
    border-radius: 10px;
  }
</style>
