<h2 class="col-md-offset-3 col-md-6" style="text-align: center;">New Business</h2>
<div id="errors" class="col-md-8 col-md-offset-2 alert alert-danger" role="alert"></div>

<form class="col-md-6 col-md-offset-3 new-business">
  <div class="form-group">
    <label for="name">Business name</label>
    <input id="name" class="form-control" type="text" name="business[name]" placeholder="Chick-fil-A">
  </div>

  <div class="form-group">
    <label for="addr">Address</label>
    <input id="addr" class="form-control" type="text" name="business[address]" placeholder="12345 Sample Road">
  </div>

  <div class="form-group">
    <label for="city">City</label>
    <input id="city" class="form-control" type="text" name="business[city]" placeholder="New York">
  </div>

  <div class="form-group">
    <label for="state">State</label>
    <input id="state" class="form-control" type="text" name="business[state]" placeholder="FL">
  </div>

  <div class="form-group">
    <label for="zip">ZIP</label>
    <input id="zip" class="form-control" type="text" name="business[zip_code]" placeholder="54321">
  </div>

  <label>
    Price range &nbsp;&nbsp;
    <label class="radio-inline">
      <input type="radio" name="business[price_range]" value="1"> ($&lt;1 - $7)
    </label>
    <label class="radio-inline">
      <input type="radio" name="business[price_range]" value="2"> ($8 - $14)
    </label>
    <label class="radio-inline">
      <input type="radio" name="business[price_range]" value="3"> ($15 - $25)
    </label>
    <label class="radio-inline">
      <input type="radio" name="business[price_range]" value="4"> ($25 - $40)
    </label>
    <label class="radio-inline">
      <input type="radio" name="business[price_range]" value="5"> ($40+)
    </label>
  </label>
  <br> <br>
  <div class="form-group">
    <label for="phone">Phone Number</label>
    <input type="text" id="phone" name="business[phone_number]" class="form-control" placeholder="415-123-4567">
  </div>
  <div class="form-group">
    <label for="website">Website</label>
    <input type="text" id="website" name="business[website_address]" class="form-control" placeholder="www.goodfood.com">
  </div>
  <div class="form-group">
    <label for="categories">Suggest Categories (up to 3)</label>
    <!-- <input type="text" id="categories" class="form-control" placeholder="Pizza, Chinese, Sushi"> -->
    <select id="categories" class="chosen-select"
            multiple name="business[categories][]"
            data-placeholder="Pizza, Chinese, Sushi">
      <% _(CATEGORIES).each(function(cat, index){ %>
        <option value="<%= index + 1 %>"><%= cat %></option>
      <% }) %>
    </select>
  </div>

  <br>
  <button class="btn btn-primary" type="submit">Create Business</button>
</form>

<script type="text/javascript">
  $(".chosen-select").chosen({max_selected_options: 3,
                              no_results_text: "Sorry, no matches",
                              width: "100%"});
</script>
