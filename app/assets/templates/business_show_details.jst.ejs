<h2>
  <%= business.escape("name").replace(/\b./g, function(a){ return a.toUpperCase(); }) %>
  <input type="hidden" class="rating" value="<%= business.escape('avg_rating') %>" data-readonly>
</h2>

<p>
  <%= business.escape("address") %>
  <%= business.escape("city") + ", " + business.escape("state") + " " + business.escape("zip_code") %>
  <span style="float: right;">
    Website: <%= business.escape("website_address") %>
  </span>
</p>

<p>
  <% for(var i = 0; i < business.get("price_range"); i++) { %>
    <span class="glyphicon glyphicon-usd"></span>
  <% } %>
  <span style="float: right;">
    Phone #: <%= business.escape("phone_number") %>
  </span>
</p>

<span><%= business.escape("num_reviews") %> Reviews</span>

<span style="float: right;">Categories: <%= business.get("categories").join(", ") %></span>

<script type="text/javascript">
  $(function() {
    $(".rating").rating();
  });
</script>
